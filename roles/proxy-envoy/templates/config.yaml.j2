static_resources:
  listeners:
  - address:
      socket_address:
        address: {{ proxy_address }} 
        port_value: {{ proxy_port }}
    filter_chains:
    - filters:
      - name: envoy.http_connection_manager
        config:
          codec_type: auto
          stat_prefix: ingress_http
          route_config:
            name: local_route
            virtual_hosts:
            - name: backend
              domains:
              - "*"
              routes:
              - match:
                  prefix: ""
                route:
                  cluster: backend              
          http_filters:
          - name: envoy.router
            config: {}
  clusters:
  - name: backend
    connect_timeout: 0.25s
    type: strict_dns
    lb_policy: round_robin
    http2_protocol_options: {}
    hosts:
    - socket_address:
        address: {{ backend_address }}
        port_value: {{ backend_port }}  
admin:
  access_log_path: "/dev/null"
  address:
    socket_address:
      address: {{ proxy_admin_address }}
      port_value: {{ proxy_admin_port }}
