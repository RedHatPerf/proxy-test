name: basic
hosts:
{% for agent in agents %}
  {{ agent }}: {{ agent }}:12345
{% endfor %}
simulation:
  http:
{% for proxy in groups['proxy'] %}
  - baseUrl: http://{{ hostvars[proxy]['ansible_' + proxy_iface]['ipv4']['address'] }}:{{ hostvars[proxy]['proxy_port'] }}
    sharedConnections: {{ (test_shared_connections / (groups['proxy'] | length)) | int | default(100, true) }}
{% endfor %}
  phases:
  - rampUp:
      rampPerSec:
        initialUsersPerSec: 1
        targetUsersPerSec: {{ test_users_per_sec }}
        duration: {{ test_rampup_duration }}
        scenario: &scenario
          orderedSequences:
          - test:
            - httpRequest:
                method: GET
                path: {{ test_path | default("/", true) }}
            - awaitAllResponses
  - steadyState:
      constantPerSec:
        usersPerSec: {{ test_users_per_sec }}
        startAfter: rampUp
        duration: {{ test_steady_duration }}
        scenario: *scenario
